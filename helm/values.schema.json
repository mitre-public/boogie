{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": [
    "name",
    "image",
    "resources"
  ],
  "properties": {
    "image": {
      "type": "string"
    },
    "resources": {
      "type": "object",
      "required": [
        "cpu",
        "memory",
        "cpuLimit",
        "memoryLimit",
        "storageClassName",
        "storageResources"
      ],
      "properties": {
        "cpu": {
          "type": "string",
          "pattern": "[0-9]+m"
        },
        "memory": {
          "type": "string",
          "pattern": "[0-9]+[M|G]i"
        },
        "cpuLimit": {
          "type": "string",
          "pattern": "[0-9]+m"
        },
        "memoryLimit": {
          "type": "string",
          "pattern": "[0-9]+[M|G]i"
        },
        "storageResource": {
          "type": "string",
          "pattern": "[0-9]+[M|G]i"
        }
      }
    },
    "arinc": {
      "type": "object",
      "required": [
        "watchDirectory"
      ],
      "properties": {
        "watchDirectory": {
          "type": "string"
        },
        "filePattern": {
          "type": "string"
        }
      }
    },
    "cleanup": {
      "type": "object",
      "properties": {
        "watchDirectory": {
          "type": "boolean"
        }
      }
    }
  }
}